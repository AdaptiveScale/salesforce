{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Reference",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Consumer Key",
          "name": "consumerKey"
        },
        {
          "widget-type": "password",
          "label": "Consumer Secret",
          "name": "consumerSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Login Url",
          "name": "loginUrl",
          "widget-attributes" : {
            "default": "https://login.salesforce.com/services/oauth2/token"
          }
        }
      ]
    },
    {
      "label": "SObject specification",
      "properties": [
        {
          "widget-type": "csv",
          "label": "White List",
          "name": "whiteList",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of SObjects to replicate"
          }
        },
        {
          "widget-type": "csv",
          "label": "Black List",
          "name": "blackList",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of SObjects NOT to replicate"
          }
        }
      ]
    },
    {
      "label": "Incremental Load Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Datetime Filter",
          "name": "datetimeFilter",
          "widget-attributes" : {
            "placeholder": "Datetime filter in SOQL Date or Date Literal format"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Duration",
          "name": "duration",
          "widget-attributes" : {
            "default": "0"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Offset",
          "name": "offset",
          "widget-attributes" : {
            "default": "0"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "select",
          "label": "Error Handling",
          "name": "errorHandling",
          "widget-attributes": {
            "values": [
              "Skip on error",
              "Send to error",
              "Stop on error"
            ],
            "default": "Skip on error"
          }
        },
        {
          "widget-type": "textbox",
          "label": "SObject Name Field",
          "name": "sObjectNameField",
          "widget-attributes": {
            "placeholder": "Field used to indicate from which SObject data comes from"
          }
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": [ ]
}
